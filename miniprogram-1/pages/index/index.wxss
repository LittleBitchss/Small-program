/**index.wxss**/
.index{
  height: 100vh;
  position: relative;
  font-family: 'Medium';
  display: flex;
  flex-direction: column;
}
.index .custom-bar__wrapper {
  width: 100%;
  left: 24rpx;
  padding: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .search-group {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 15rpx;
}
.index .search-group .select{
  height: 100%;
  display: flex; 
  align-items: center;
  justify-content: space-between;
  color: #e70013;
  font-size: 25rpx;
}
.index .search-group .select .down{
  width: 16rpx;
  height: 10rpx;
  margin-left: 20rpx;
  display: block;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 20rpx;
}
.wx-swiper-dots .wx-swiper-dot{
  border: 2rpx solid #ffce0b;  /*圆角*/
}
/* 需添加 */
.index .module{
  margin: 0 auto;
  padding: 20rpx 72rpx 0;
  height: 290rpx;
  position: relative;
  background-color: #fff;
  top: -30rpx;
  border-radius: 30rpx;
}
.index .module .swiper{
  height: 90%;
  overflow-x: hidden;
  position: relative;
}
@keyframes toRight{
  0%{
    left: 0;
  }
  100%{
    left:-100%;
  }
}
@keyframes toLeft{
  0%{
    left:-100%;
  }
  100%{
    left: 0;
  }
}
.index .module .swiper .slider{
  width: 200%;
  height: 100%;
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
}
.index .module .swiper .toRight{
  left: -100%;
  animation:toRight 300ms;
}
.index .module .swiper .toLeft{
  left: 0;
  animation:toLeft 300ms;
}
.index .module .swiper .slider .item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.index .module .swiper .slider .item .components{
  width: 25%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index .module .swiper .slider .item .components .img{
  width: 84rpx;
  height: 66rpx;
}
.index .module .swiper .slider .item .components .text{
  font-size: 25rpx;
  font-family: 'Regular';
}
.index .module .indicatorBar{
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .module .indicatorBar .item{
  width: 46rpx;
  height: 8rpx;
  background-color: #e8e8e8;
  margin: 0 2rpx;
  border-radius: 10rpx;
}
.index .module .indicatorBar .active{
  background-color: #ff7800;
}
.index .advertise1{
  height: 168rpx;
  width: 656rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  position: relative;
  top: -10rpx;
}
.index .advertise1 .imgs{
  width: 100%;
  height: 100%;
  display: block;
}

.index .recommend{
  width: 100%;
  height: 370rpx;
  color:#e70013;
}
.index .recommend .recommend_title{
  height: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.index .recommend .recommend_title .wire{
  width: 224rpx;
  border-top: 2rpx solid #e70013;
  margin: 0 18rpx;
}
.index .recommend .scroll-view_H{
  white-space: nowrap;
  height: 80%;

}
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
.index .recommend .scroll-view-item_H{
  display: inline-block;
  width: 43%;
  height: 100%;
  margin-right: 26rpx;
  overflow: hidden;
}
.index .recommend .scroll-view-item_H:first-child{
  margin-left: 26rpx;
}
.index .recommend .scroll-view-item_H .item_img{
  height: 71%;
  width: 100%;
  border-radius: 10rpx;
