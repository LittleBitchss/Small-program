  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}
.index .recommend .scroll-view-item_H .item_bottom .item_bottom_left{
  display: flex;
}
.index .recommend .scroll-view-item_H .item_bottom .oldPrice{
  display: flex;
  align-items: flex-end;
  font-size: 19rpx;
  color: #b5b5b5;
  text-decoration: line-through;
  margin-left:5rpx;
}
.index .recommend .scroll-view-item_H .item_bottom .item_bottom_right{
  padding: 4rpx 13rpx;
  background-color: #ffeeee;
  font-family: 'Light';
  font-size: 19rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
