<!--secondary/pages/auditorium/index.wxml-->
<view class="auditorium">
  <view class="details">
    <image class="cover" src="{{info.a_cover_photo}}"></image>
    <view>
    </view>
    <view class="title">{{info.a_name}}</view>
    <view class="addr">
      <image class="addr_img" src="../../../icon/report_marks.png"></image>
      地址：{{info.a_address}}
    </view>
    <view class="tiem">
      <image class="tiem_img" src="../../../icon/report_clock.png"></image>
      营业时间：全天
    </view>
    <view class="hint">礼堂简介</view>
    <text class="introduce" style="white-space: pre-wrap;word-break: break-all;">{{info.a_introduce}}</text>
    <view class="hint">联系人：{{info.a_contacts}}</view>
    <view class="hint">联系电话：{{info.a_phone}}</view>
    <view class="hint">礼堂详情</view>
    <swiper class="hallSwiper" autoplay="true" interval="3500" circular="true" indicator-dots="true" previous-margin="40px" easing-function="easeInCubic" snap-to-edge="true" next-margin="60px">
      <swiper-item class="swiper-item" wx:for="{{info.a_scroll_picture}}" wx:key="index">
        <image class="item-img" src="{{item}}"></image>
      </swiper-item>
    </swiper>
    <view class="assure">
      <view class="assures">
        <text class="txts">保障</text>
        <view class="item">
          <image class="item_img" src="../../../icon/report_tick.png"></image>
          <text class="item_txt">食品安全责任险</text>
        </view>
      </view>
    </view>
  </view>
  <view class="hallls">
    <view class="hallls_i">
      <view class="hallls_i_left">选择大厅</view>
      <view class="hallls_i_right" bindtap="openMask">
        <text class="i_name">{{hallxss?info.a_name+hallxss:"请选择大厅"}}</text>
        <image class="i_img" src="../../../icon/report_right.png"></image>
      </view>
    </view>
    <view class="hallls_i">
      <view class="hallls_i_left">预约日期</view>
      <view class="hallls_i_right" bindtap="openMask">
        <view class="i_time">
          <text class="i_time_txt">{{startDate}}</text>
          至
          <text class="i_time_txt i_time_txts">{{endDate}}</text>
        </view>
        <image class="i_img" src="../../../icon/report_right.png"></image>
      </view>
    </view>
    <van-button class="btn" type="info" block>预约</van-button>
  </view>
</view>
<page-container class="page-container" show="{{show}}" position="right">
  <view class="page_cont">
    <view class="item">
      <view class="items {{item.flag?'itemsx':''}}" wx:for="{{info.office}}" wx:key="index" catchtap="uncheck" data-index="{{index}}">
        <van-icon name="checked" style="position: absolute;right: 0;top: 0;" color="#00ae31" size="26rpx" />
        <view class="itemss">{{item.ao_name}}</view>
        <view class="itemss">{{item.ao_capacity}}人</view>
        <view class="itemss">{{item.ao_tables}}桌</view>
      </view>
    </view>
  </view>
  <view class="container">
    <view>
      <calendar wx:if="{{isShows==2}}" id="calendar" isOpen="{{isOpen}}" mini="true" selected="{{selected}}" lockDay="{{lockday}}" bind:getdate="getdate" bind:select="cmfclick"></calendar>
    </view>
  </view>
</page-container>