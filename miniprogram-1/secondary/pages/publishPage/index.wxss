/* secondary/pages/publishPage/index.wxss */
.publishPage{
  position: relative;
  height: 100vh;
}
.publishPage .title{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Medium';
  font-size: 45rpx;
  margin: 0 30rpx;
}
.publishPage .course{
  position: relative;
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Light';
  font-size: 20rpx;
  line-height: 1;
  margin: 0 30rpx;
}
.publishPage .course .course_item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}
.publishPage .course .course_midden{
  z-index: 0;
  width: 582rpx;
  height: 2rpx;
  background-color: #f14d45;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translatex(-50%);
  margin-top: 22rpx;
}
.publishPage .course .course_item .outerRace{
  z-index: 1;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f14d45;
  display: flex;
  justify-content: center;
  align-items: center;
}
.publishPage .course .course_item .insideTracks{
  z-index: 0;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #f14d45;
  margin-top: 9rpx;
}
.publishPage .course .course_item .outerRace .insideTrack{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #fff;
}
.publishPage .item{
  height: 164rpx;
  margin: 0 22rpx;
  padding: 0 38rpx;
  border-bottom: 2rpx solid #cfcfcf;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.publishPage .item .item_title{
  font-family: 'Regular';
  font-size: 25rpx;
  margin-bottom: 30rpx;
}
.publishPage .item .item_inp .placeholder{
  color: #5f5f5f;
  font-size: 30rpx;
}
.publishPage .item .content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #5f5f5f;
  font-size: 30rpx;
}
.publishPage .item .content .content_left{
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.publishPage .item .content .actives{
  color: #000;
}
.publishPage .item .content .img{
  width: 16rpx;
  height: 30rpx;
}

.publishPage .note{
  margin: 30rpx 60rpx 0;
  font-family: 'Regular';
  font-size: 18rpx;
  color: #5f5f5f;
}

.publishPage .bottom{
  height: 128rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}

.publishPage .btn{
  height: 60rpx;
  width: 702rpx;
  background-color: #a3b3f9;
  color: #fff;
  font-family: 'Medium';
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.publishPage .active{
  background-color: #4781d8;
}

.page-container .jobDescribe{
  height: 100%;
}

.page-container .jobDescribe .z_a_title {
  font-size: 45rpx;
  font-family: 'Medium';
  margin-top: 50rpx;
  padding: 0 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-container .jobDescribe .z_a_title .words {
  font-size: 30rpx;
}

.page-container .jobDescribe .z_a_title .wordss {
  color: #4768f3;
}

.page-container .jobDescribe .z_a_describe {
  font-size: 25rpx;
  font-family: 'Regular';
  margin-top: 20rpx;
  padding: 0 60rpx;
}

.page-container .jobDescribe .z_a_area {
  width: calc(100% - 120rpx);
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 0 60rpx;
  height: 700rpx;
  line-height: 45rpx;
}

.page-container .jobDescribe .z_a_placeholder {
  font-size: 30rpx;
  margin-top: 20rpx;
  padding: 0 60rpx;
  color: #cfcfcf;
}

.page-container .jobDescribe .z_info_bottom {
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
}

.page-container .jobDescribe .z_info_bottom .btn {
  height: 60rpx;
  width: 702rpx;
  background-color: #a3b3f9;
  color: #fff;
  font-family: 'Medium';
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-container .jobDescribe .z_info_bottom .active{
  background-color: #4781d8;
}