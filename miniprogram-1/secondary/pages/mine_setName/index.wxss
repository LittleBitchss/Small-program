/* secondary/pages/mine_setName/index.wxss */
.setName{
  height: 100vh;
}
.save{
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 30rpx;
  font-size: 25rpx;
  font-family: 'Regular';
  
}
.save .saves{
  padding: 2rpx 16rpx;
  background-color: #eee;
  border-radius: 5rpx;
}
.headPicture{
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.headPicture .picture{
  height: 300rpx;
  width: 300rpx;
  background-color: #eee;
  border-radius: 50%;
  background-image: url(https://qunyan.canancn.com/assets/applet/img/mine/mine_img.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.item{
  font-size: 28rpx;
  width: 96%;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 80rpx;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
}
.item .item_{
  display: flex;
  flex: 1;
}
.item .item_ .items{
  flex: 1;
  width: 380rpx;
  display: flex;
  justify-content:  center;
}
.item .item_ .itemx{
  color: #aaa;
}
.item .itemi{
  width: 14rpx;
  height: 28rpx;
}
.name{
  margin: 20rpx auto;
  padding: 0 30rpx;
}