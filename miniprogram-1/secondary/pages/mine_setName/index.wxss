/* secondary/pages/mine_setName/index.wxss */
.setName{
  height: 100vh;
}
.save{
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 30rpx;
  font-size: 25rpx;
  font-family: 'Regular';
  
}
.save .saves{
  padding: 2rpx 16rpx;
  background-color: #eee;
  border-radius: 5rpx;
}
.avatar-wrapper{
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-wrapper .avatar{
  height: 280rpx;
  width: 300rpx;
  background-color: #eee;
  border-radius: 50%;
}
.item{
  font-size: 28rpx;
  width: 80%;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 80rpx;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
}
.item .item_{
  display: flex;
  flex: 1;
}
.item .item_ .weui-input{
  flex: 1;
  width: 380rpx;
  display: flex;
  text-align: center;
  justify-content:  center;
}
.item .item_ .itemx{
  color: #aaa;
}