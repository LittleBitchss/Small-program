/* secondary/pages/resumeInfo/index.wxss */
.list {
  height: 100vh;
  background-color: #f3f3f3;
}

.list .list_item {
  width: 722rpx;
  height: 186rpx;
  margin: 15rpx auto 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  overflow: hidden;
}

.list_item .list_item1 {
  width: 212rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.list_item .list_item1 .state{
  width: 10rpx;
  height: 10rpx;
  background-color: red;
  position: absolute;
  border-radius: 50%;
  top: 20rpx;
  left: 20rpx;
}
.list_item .list_item1 .list_item1_img{
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  background-image: url(https://qunyan.canancn.com/assets/applet/img/jobRecruitment/photo.png);
  background-size: 100% 100%;
  box-shadow: #0186fe 0rpx 0rpx 20rpx -8rpx;
}
.list_item .list_item2 {
  flex: 1;
  font-size: 22rpx;
  font-family: 'Regular';
  line-height: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list_item .list_item2 .list_item2_name{
  font-size: 34rpx;
}
.list_item .list_item2 .list_item2_suffer{
  color: #5f5f5f;
  line-height: 40rpx;
  
}
.list_item .list_item2 .list_item2_state{
  color: #4768f3;
  margin-top: 10rpx;
}
.list_item .list_item3 {
  width: 122rpx;
  font-family: 'Medium';
  font-size: 22rpx;
  background-color: #dae1fd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_item .list_item3 .list_item3_item {
  padding: 6rpx 12rpx;
  background-color: #eee;
  border-radius: 8rpx;
  line-height: 1;
  font-size: 18rpx;
  margin-right: 18rpx;
  font-family: 'Medium';
}

.list_item .list_item4 {
  height: 42rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'Medium';
}

.list_item .list_item4 .list_item4_left {
  display: flex;
  align-items: center;
  font-size: 18rpx;
}

.list_item .list_item4 .list_item4_left .photo {
  height: 42rpx;
  width: 42rpx;
  background-color: #4768f3;
  border-radius: 50%;
  display: block;
  margin-right: 14rpx;
}

.list_item .list_item4 .list_item4_right {
  font-size: 22rpx;
  color: #b6b6b6;
}

.page-container .editResume  {
  height: 100vh;
  overflow: auto;
}

.page-container .editResume  .item {
  min-height: 190rpx;
  width: 696rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #cfcfcf;
  padding: 40rpx 36rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.page-container .editResume  .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 190rpx;
  width: 696rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #cfcfcf;
  padding: 0 36rpx;
}

.page-container .editResume  .info .infos .name {
  font-size: 45rpx;
  font-family: 'Bold';
  display: flex;
  align-items: center;
}



.page-container .editResume  .info .infos .describe {
  font-family: 'Regular';
  font-size: 25rpx;
}

.page-container .editResume  .info .photo {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  overflow: hidden;
  background-image: url(https://qunyan.canancn.com/assets/applet/img/jobRecruitment/photo.png);
  background-size: 100% 100%;
  box-shadow: #0186fe 0rpx 0rpx 20rpx -8rpx;
}

.page-container .editResume  .info .photo .photos {
  width: 100%;
  height: 100%;
}

.page-container .editResume  .item .title {
  font-family: 'Medium';
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1;
}

.page-container .editResume  .item .content {
  font-family: 'Regular';
  font-size: 22rpx;
  color: #5f5f5f;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.page-container .editResume  .item .content .content_left {
  display: flex;
  flex-direction: column;
}

.page-container .editResume  .item .content .content_lefts {
  color: #000;
  font-family: 'Medium';
  font-size: 25rpx;
}

.page-container .editResume  .item .content .content_right {
  display: flex;
  align-items: center;
}

.page-container .editResume  .item .content .content_left .content_left_top {
  color: #000;
  font-family: 'Medium';
  font-size: 25rpx;
}

.page-container .editResume  .item .content .content_left .content_left_tops {
  font-family: 'Regular';
}


.page-container .editResume  .bottom{
  width: 100%;
  height: 128rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-container .editResume  .bottom .btn{
  width: 220rpx;
  height: 54rpx;
  background: linear-gradient(to right,#fe6d65,#fe4f79);
  background: #fe5376;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  font-family: 'Regular';
  font-size: 22rpx;
  color: #fff;
}
.page-container .editResume  .bottom .btns{
  margin-left: 30rpx;
  background-color: #4768f3;
}